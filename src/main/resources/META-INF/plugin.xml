<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.frankfuenmayor.dart</id>
    <!--suppress PluginXmlCapitalization -->
    <name>build_runner for Dart</name>
    <vendor>Frank Fuenmayor</vendor>
    <description>
        <![CDATA[
        <p>Support for running build_runner for Dart.</p>
        <br>
        <p>This plugin provides gutter icons for running build_runner for Dart.</p>
        ]]>
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>Dart</depends>

    <resource-bundle>buildrunner.BuildRunnerBundle</resource-bundle>



    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.lineMarkerProvider
                implementationClass="com.github.frankfuenmayor.dart.buildrunner.codeInsight.RunBuilderRunnerLineMarkerProvider"
                language="Dart"/>

        <!--suppress PluginXmlI18n, PluginXmlCapitalization -->
        <applicationConfigurable
                displayName="build_runner for Dart"
                instance="com.github.frankfuenmayor.dart.buildrunner.options.BuildRunnerBuildConfigurable"/>

        <toolWindow id="build_runner"
                    anchor="bottom"
                    factoryClass="com.github.frankfuenmayor.dart.buildrunner.ui.DartBuildRunnerOutputWindow"
                    doNotActivateOnStart="true"
                    canCloseContents="true"
                    icon="com.github.frankfuenmayor.dart.buildrunner.BuildRunnerIcons.Build"
        />

        <notificationGroup id="Dart build_runner notification group"
                           displayType="BALLOON"
                           bundle="buildrunner.BuildRunnerBundle"
                           key="notification.group.dart.build_runner.notification.group"/>


        <localInspection 
            language="Dart"
            shortName="MissingPartStatement"
            displayName="Missing required part statement"
            groupName="Build Runner - Dart"
            enabledByDefault="true"
            implementationClass="com.github.frankfuenmayor.dart.buildrunner.codeInspection.MissingRequiredPartStatementLocalInspection"/>
    </extensions>
</idea-plugin>
